{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",

    "ecmaFeatures": {
      "classes": true
    },
    requireConfigFile: false,
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-jsx"
      ]
    }
  },

  "ignorePatterns": ["**/*.ts"],

  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },

  "globals": {
    "IMask": false
  }
}
